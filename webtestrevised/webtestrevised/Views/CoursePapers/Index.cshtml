@model IEnumerable<webtestrevised.Models.CoursePaper>

@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Register Course</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Course Number: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index" class="btn">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.CoursePaper_No)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Type)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CoursePaper_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Staff.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Type)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoursePaperID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CoursePaperID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CoursePaperID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
