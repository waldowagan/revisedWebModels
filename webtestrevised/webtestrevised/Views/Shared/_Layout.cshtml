<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webtestrevised</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <style>

        .navbar {
            background: linear-gradient(to bottom, #004367 90%, #f36f24 74%);
         
        }
        
        .nav-item{
         color: white;
        }
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 50px;
       /*     background-color: #f36f24;*/
            background-color: #004367;
        }

        .h5{
            font-family: 'Microsoft Sans Serif';
        }



    </style>
</head>
<body>
    <header>
        <nav class="navbar py-4 navbar-expand-sm navbar-toggleable-sm navbar-light mb-0">
            <div class="container">
                <a class="navbar-brand text-light display-4" asp-area="" asp-controller="Logins" asp-action="Create">SIT Gym</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Logins" asp-action="Create">Home</a>
                            </li>*@

                        <li class="nav-item">
                            <a class="nav-link navbar-brand text-light display-4" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-brand text-light display-4" asp-area="" asp-controller="Staffs" asp-action="Index">Staff</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-brand text-light display-4" asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-brand text-light display-4" asp-area="" asp-controller="CoursePapers" asp-action="Index">Course Paper</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-brand text-light display-4" asp-area="" asp-controller="Logins" asp-action="Index">Login History</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid body-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


      
        <footer class="footer text-muted text-center mb-0 p-0">
            <div class="container text-light">
                &copy; 2021 - Team Radiance 
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
